{{ form_start(form) }}
{{ form_errors(form) }}
{{ form_widget(form.id) }}
<div>
    {#- pathInfo -#}
    {{ form_label (form.pathInfo) }}
    {{ form_errors(form.pathInfo) }}
    {{ form_widget(form.pathInfo) }}
</div>
<div>
    {#- title -#}
    {{ form_label (form.title) }}
    {{ form_errors(form.title) }}
    {{ form_widget(form.title) }}
</div>
<div>
    {#- templateFile -#}
    {{ form_label (form.templateFile) }}
    {{ form_errors(form.templateFile) }}
    {{ form_widget(form.templateFile) }}
</div>
<div>
    {#- active -#}
    {{ form_label (form.active) }}
    {{ form_errors(form.active) }}
    {{ form_widget(form.active) }}
</div>
<hr/>
    {#- parameters -#}
    {%- for parameter in form.parameters -%}
        <div>
            {%- if options[parameter.vars.name].label is defined -%}
                {{ form_label (parameter, options[parameter.vars.name].label) }}
            {%- else -%}
                {{ form_label (parameter) }}
            {%- endif -%}
            {{ form_errors(parameter) }}
            {{ form_widget(parameter) }}
        </div>
    {%- endfor -%}
<input type="submit" />
{{ form_end(form) }}
